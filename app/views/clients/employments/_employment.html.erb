<%= turbo_frame_tag employment do %>
  <div class="bg-white border border-slate-300 rounded mb-4 overflow-hidden">
    <% if employment.current? %>
      <div class="text-sm text-green-700 bg-green-100 py-1 px-3">
        Current employment
      </div>
    <% end %>
    <div class="flex py-2 px-3">
      <div class="grow">
        <p><%= employment.employer %></p>
        <p><%= employment.position %></p>
        <p><%= employment.employment_type.to_s.titleize %></p>
        <p><%= employment.address_1 %></p>
        <p><%= employment.address_2 %></p>
        <p><%= employment.city %>, <%= employment.province %></p>
        <p><%= employment.start_date %> to <% if employment.current %>Current<% else %><%= employment.end_date %><% end %></p>
      </div>
      <div class="flex gap-2 items-start">
        <%= link_to 'Edit', edit_client_employment_path(employment.client, employment), class: "text-sm border border-slate-300 text-slate-500 rounded py-2 px-3 block" %>
        <%= link_to "Delete", client_employment_path(employment.client, employment), class: "text-sm border border-slate-300 text-slate-500 rounded py-2 px-3 block", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete employment?" } %>
      </div>
    </div>
  </div>
<% end %>