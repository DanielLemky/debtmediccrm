<%= turbo_frame_tag @phone_number do %>
  <%= form_with model: @phone_number, url: @path do |form| %>
    <div class="bg-white border border-slate-300 rounded py-2 px-4 mb-4">
      <div class="flex gap-4">
        <div class="my-2">
          <p><label>Type</label></p>
          <%= form.select :number_type, [['Mobile', :mobile], ['Home', :home], ['Work', :work]], {}, class: "border border-slate-300 rounded w-full" %>
        </div>
        <div class="my-2">
          <p><label>Number</label></p>
          <%= form.text_field :number, class: "border border-slate-300 rounded w-full" %>
        </div>
      </div>
      <div class="text-right flex gap-4 justify-between">
        <%= form.submit "Save", class: "text-sm border bg-green-100 text-green-700 border border-green-600 rounded py-2 px-3" %>
      </div>
    </div>
  <% end %>
<% end %>