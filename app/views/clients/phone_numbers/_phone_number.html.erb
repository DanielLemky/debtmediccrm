<%= turbo_frame_tag phone_number do %>
  <div class="bg-white border border-slate-300 rounded mb-4 grid grid-cols-3 items-center">
    <div class="py-2 px-3">
      <%= phone_number.number_type.to_s.capitalize %>
    </div>
    <div class="py-2 px-3">
      <%= phone_number.number %>
    </div>
    <div class="py-2 px-3 flex gap-4 justify-end">
      <%= link_to 'Edit', edit_client_phone_number_path(phone_number.client, phone_number), class: "text-sm border border-slate-300 text-slate-500 rounded py-2 px-3 box-content" %>
      <%= link_to "Delete", client_phone_number_path(phone_number.client, phone_number), class: "text-sm border border-slate-300 text-slate-500 rounded py-2 px-3 box-content", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete phone number #{phone_number.number}?" } %>
    </div>
  </div>
<% end %>