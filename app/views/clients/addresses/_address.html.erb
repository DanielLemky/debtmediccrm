<%= turbo_frame_tag address do %>
  <div class="bg-white border border-slate-300 rounded mb-4 overflow-hidden">
    <% if address.current? %>
      <div class="text-sm text-green-700 bg-green-100 py-1 px-3">
        Current Address
      </div>
    <% end %>
    <div class="flex py-2 px-3">
      <div class="grow">
        <p><%= address.address_1 %></p>
        <p><%= address.address_2 %></p>
        <p><%= address.city %>, <%= address.province %> <%= address.postal_code %></p>
      </div>
      <div class="flex gap-2 items-start">
        <%= link_to 'Edit', edit_client_address_path(address.client, address), class: "text-sm border border-slate-300 text-slate-500 rounded py-2 px-3 block" %>
        <%= link_to "Delete", client_address_path(address.client, address), class: "text-sm border border-slate-300 text-slate-500 rounded py-2 px-3 block", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete address?" } %>
      </div>
    </div>
  </div>
<% end %>