<%= turbo_frame_tag identification do %>
  <div class="bg-white border border-slate-300 rounded mb-4 overflow-hidden">
    <div class="flex py-2 px-3">
      <div class="grow">
        <p><%= identification.id_type.to_s.titleize %></p>
        <p><%= identification.number %></p>
        <p><%= identification.expiry_date %></p>
      </div>
      <div class="flex gap-2 items-start">
        <%= link_to 'Edit', edit_client_identification_path(identification.client, identification), class: "text-sm border border-slate-300 hover:border-slate-400 text-slate-500 rounded py-2 px-3" %>
        <%= link_to "Delete", client_identification_path(identification.client, identification), class: "text-sm border border-slate-300 hover:border-slate-400 text-slate-500 rounded py-2 px-3 block", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete identification?" } %>
      </div>
    </div>
  </div>
<% end %>